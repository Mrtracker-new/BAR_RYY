# ============================================
# BAR Web Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ==================
# Database Configuration
# ==================
# PostgreSQL connection string
DATABASE_URL=your_database_url_here

# ==================
# Email Service (Required for 2FA)
# ==================
# Get your Brevo API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=BAR Web - Secure File Sharing

# ==================
# Feature Flags
# ==================
# Enable/disable 2FA feature (set to "true" to require email secrets)
REQUIRE_2FA=false

# ==================
# Frontend Configuration
# ==================
# The URL where your frontend is hosted (used for generating share links)
FRONTEND_URL=http://localhost:5173

# ==================
# Production Settings
# ==================
# Set to "true" in production environments
IS_PRODUCTION=false

# ==================
# Server Configuration
# ==================
# Port for the backend server (usually set by hosting platform)
# PORT=8000
